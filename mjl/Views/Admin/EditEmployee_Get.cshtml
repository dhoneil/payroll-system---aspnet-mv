                            <div class="input-group-addon">
                                <i class="fa fa-calendar"></i>
                            </div>
                            <input type="date" class="form-control pull-right  " id="dtdatehiredEdited" value="@x.DateHired.Value.ToString("yyyy-MM-dd")" required>
                        </div>
                    </div>
                </div>
