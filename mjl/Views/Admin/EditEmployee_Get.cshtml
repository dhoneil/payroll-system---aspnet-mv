                        <input id="txtheightEdited" class="form-control input-sm" value="@x.height" required />
                    </div>
                    <div class="form-group">
                        <label>Weight</label>
                        <input id="txtweightEdited" class="form-control input-sm" value="@x.weight" required />
                    </div>
                    <div class="form-group">
